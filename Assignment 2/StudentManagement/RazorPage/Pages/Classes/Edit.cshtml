@page
@model RazorPage.Pages.Classes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Class</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Class.ClassId" />
            <div class="form-group mb-3">
                <label asp-for="Class.ClassName" class="control-label"></label>
                <input asp-for="Class.ClassName" class="form-control" />
                <span asp-validation-for="Class.ClassName" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3 d-flex align-items-center justify-content-start">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-primary mx-3">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
