@page
@model RazorPage.Pages.ClassMembers.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ClassMember</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="ClassMember.MemberId" class="control-label"></label>
                <input asp-for="ClassMember.MemberId" class="form-control" />
                <span asp-validation-for="ClassMember.MemberId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ClassMember.FirstName" class="control-label"></label>
                <input asp-for="ClassMember.FirstName" class="form-control" />
                <span asp-validation-for="ClassMember.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ClassMember.LastName" class="control-label"></label>
                <input asp-for="ClassMember.LastName" class="form-control" />
                <span asp-validation-for="ClassMember.LastName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ClassMember.DateOfBirth" class="control-label"></label>
                <input asp-for="ClassMember.DateOfBirth" class="form-control" />
                <span asp-validation-for="ClassMember.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ClassMember.Role" class="control-label"></label>
                <select asp-for="ClassMember.Role" class="form-control">
                    <option value="Student">Student</option>
                    <option value="Teacher">Teacher</option>
                </select>
                <span asp-validation-for="ClassMember.Role" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ClassMember.Gender" class="control-label"></label>
                <select asp-for="ClassMember.Gender" class="form-control">
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
                <span asp-validation-for="ClassMember.Gender" class="text-danger"></span>
            </div>
            <div class="form-group mb-3 d-flex align-items-center justify-content-start">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-primary mx-3">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
